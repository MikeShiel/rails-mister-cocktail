<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path "ba.jpg"  %>')">
   <class="banner-content">
    <h1>Mister Cocktail</h1>
     <%= link_to "create a cocktail", new_cocktail_path, class: "btn btn-danger" %>
  </div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: url('<%= cocktail.photo.blank? ? (cl_image_path "rgzvaqgokgdbkbj6ap60") : (cl_image_path cocktail.photo); %>')">
        </div>
        <div class="card-body">
          <h2><%= link_to cocktail.name, cocktail %></h2>
          <h5><%= link_to "delete", cocktail_path(cocktail), method: :delete  %></h5>
        </div>
      </div>
    <% end %>
  </div>
</div>

