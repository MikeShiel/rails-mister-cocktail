<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="card-show">
        <div class= "col-xs-12 col-md-6">
          <h2> <%= @cocktail.name %></h2>
          <% @cocktail.doses.all.each do |dose| %>
          <p><%= dose.description %> - <%= dose.ingredient.name %></p>
          <p><%= link_to "Delete dose",dose_path(dose), method: :delete %></p>
          <% end %>
        </div>
      </div>



        <div class="cards-description">
          <div class="col-xs-10 col-xs-offset-1">
            <h1>Add New Dose</h1>
            <%= render 'doses/new' %>
          </div>
        </div>
    </div>

    <div class="row marged">
      <div class = "col-xs-12">
        <p><%= link_to "Back to Main Menu", cocktails_path %></p>
      </div>
    </div>
  </div>
</div>
