<div class="container">
  <div class="row">
    <div class= "col-sx-12">
      <h2> <%= @cocktail.name %></h2>
      <% @cocktail.doses.all.each do |dose| %>
      <p><%= dose.description %> - <%= dose.ingredient.name %></p>
      <% end %>
    </div>
  </div>
  <p><%= link_to"Add the dosage", new_cocktail_dose_path(@cocktail) %></p>
  <p><%= link_to "Destroy cocktail", @cocktail, method: :delete %></p>
  <p><%= link_to "Back to Main Menu", cocktails_path %></p>
</div>
